
interface core {

  type error = string

  record typegraph-init-params {
    name: string,
  }

  init-typegraph: func(params: typegraph-init-params) -> result<_, error>
  finalize-typegraph: func() -> result<string, error>

  type type-id = u32

  record type-base {
    name: option<string>,
  }

  record type-proxy {
    name: string,
  }

  proxyb: func(data: type-proxy) -> result<type-id, error>

  record type-integer {
    min: option<s64>,
    max: option<s64>,
  }

  integerb: func(data: type-integer) -> result<type-id, error>
  type-as-integer: func(ref: type-id) -> result<tuple<type-id, type-base, type-integer>, error>

  record type-struct {
    props: list<tuple<string, type-id>>,
  }

  structb: func(data: type-struct) -> result<type-id, error>
  type-as-struct: func(id: type-id) -> result<tuple<type-id, type-base, type-struct>, error>

  get-type-repr: func(id: type-id) -> result<string, error>

  record type-func {
    inp: type-id,
    out: type-id,
  }
  funcb: func(data: type-func) -> result<type-id, error>

  expose: func(fns: list<tuple<string, type-id>>, namespace: list<string>) -> result<_, error>
}

default world typegraph {
  import print: func(msg: string)

  export core: self.core
}
